function TdmDBEXMaster.Montar_SQL_Pesquisa_UndMedida(pOpcao: smallint;
  pConteudo: string): string;
begin

  case pOpcao of
    0:Result := 'WHERE UNIDADE = ' + QuotedStr(pConteudo);
    1:Result := 'WHERE DESCRICAO LIKE ' + QuotedStr('%' + pConteudo + '%');
    2:Result := '';
  end;

