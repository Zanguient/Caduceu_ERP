  case pOpcao of
    0:Result := 'WHERE CODIGO_SITUACAO = ' + pConteudo;
    1:Result := 'WHERE DESCRICAO LIKE ' + QuotedStr('%' + pConteudo + '%');
    2:Result := '';
  end;

